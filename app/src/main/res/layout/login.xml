<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"  android:layout_height="match_parent"  android:layout_width="match_parent"  xmlns:app="http://schemas.android.com/apk/res-auto"  android:background="@drawable/bg_pertama"  android:layout_gravity="center"  android:orientation="vertical"  tools:context=".Login">  <ImageView    android:layout_marginTop="@dimen/_20sdp"    android:layout_width="@dimen/_170sdp"    android:layout_height="@dimen/_160sdp"    android:layout_centerHorizontal="true"    android:foregroundGravity="center"    android:layout_marginBottom="@dimen/_30sdp"    android:background="@drawable/silapos"    />  <LinearLayout    android:layout_width="match_parent"    android:layout_marginTop="@dimen/_190sdp"    android:layout_height="@dimen/_390sdp"    android:orientation="vertical"    android:paddingLeft="@dimen/_35sdp"    android:paddingRight="@dimen/_35sdp"    android:gravity="center_horizontal|left">    <TextView      android:text="Username"      android:layout_marginTop="@dimen/_30sdp"      android:textColor="@color/black"      android:textSize="@dimen/_16ssp"      android:textStyle="bold"      android:paddingStart="@dimen/_5sdp"      android:layout_marginBottom="@dimen/_5sdp"      android:layout_width="@dimen/_100sdp"      android:layout_height="@dimen/_22sdp" />    <EditText      android:id="@+id/uName"      android:layout_width="@dimen/_230sdp"      android:layout_height="@dimen/_35sdp"      android:paddingLeft="@dimen/_10sdp"      android:hint="Masukan Username Kamu.."      android:alpha="0.7"      android:background="@drawable/bg_rounded"      android:layout_centerHorizontal="true"      android:singleLine="true"      android:textColorHint="@color/black"/>    <TextView      android:text="Password"      android:layout_gravity="left"      android:textColor="@color/black"      android:textSize="@dimen/_16ssp"      android:textStyle="bold"      android:paddingStart="@dimen/_5sdp"      android:layout_marginTop="@dimen/_15sdp"      android:layout_width="@dimen/_100sdp"      android:layout_height="@dimen/_22sdp" />    <EditText      android:id="@+id/passwords"      android:layout_width="@dimen/_230sdp"      android:layout_height="@dimen/_35sdp"      android:layout_marginTop="@dimen/_4sdp"      android:paddingLeft="@dimen/_10sdp"      android:hint="Masukan Password Kamu.."      android:alpha="0.7"      android:inputType="textPassword"      android:background="@drawable/bg_rounded"      android:layout_centerHorizontal="true"      android:singleLine="true"      android:drawablePadding="@dimen/_10sdp"      android:textColorHint="@color/black" />    <Button      android:id="@+id/btnLogin"      android:layout_width="@dimen/_230sdp"      android:layout_height="@dimen/_45sdp"      android:layout_marginTop="@dimen/_65sdp"      android:background="@drawable/bg_rounded"      android:backgroundTint="#1372d1"      android:textSize="@dimen/_13ssp"      android:text="Log In"      android:textStyle="bold"      android:layout_centerHorizontal="true"      android:textColor="@color/white"      />    <TextView      android:layout_width="@dimen/_240sdp"      android:layout_height="@dimen/_20sdp"      android:text="--------------- or ----------------"      android:gravity="center"      android:textSize="@dimen/_17ssp"      android:textStyle="bold"      android:textColor="@color/white"      />    <Button      android:id="@+id/btnToRegist"      android:layout_marginTop="@dimen/_5sdp"      android:layout_width="@dimen/_230sdp"      android:layout_height="@dimen/_45sdp"      android:backgroundTint="@color/white"      android:textSize="@dimen/_13ssp"      android:text="Sign Up"      android:background="@drawable/bg_rounded"      android:textStyle="bold"      android:layout_centerHorizontal="true"      android:textColor="#1372d1"      android:onClick="RegistrasiView"      />  </LinearLayout></RelativeLayout>