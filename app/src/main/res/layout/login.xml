<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"  android:layout_height="match_parent"  android:layout_width="match_parent"  android:background="@color/primary"  android:paddingLeft="20dp"  android:paddingRight="20dp"  android:paddingTop="16dp"  android:paddingBottom="16dp"  android:layout_gravity="center"  android:orientation="vertical"  tools:context=".Login">  <ImageView    android:layout_width="180dp"    android:layout_height="155dp"    android:src="@drawable/logo_app"    android:layout_centerHorizontal="true"    android:layout_marginTop="90dp">  </ImageView>  <TextView    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:layout_centerHorizontal="true"    android:layout_marginTop="240dp"    android:textStyle="bold"    android:textSize="30dp"    android:text="POSYANDU"    android:textColor="@color/white" >  </TextView>  <EditText    android:layout_width="320dp"    android:layout_height="33dp"    android:layout_marginStart="20dp"    android:layout_marginTop="330dp"    android:layout_marginEnd="20dp"    android:paddingLeft="10dp"    android:hint="Telepon atau Email"    android:background="@drawable/rounded_bg"    android:layout_centerHorizontal="true"    android:singleLine="true"    android:textColorHint="@color/black" />  <EditText    android:layout_width="320dp"    android:layout_height="33dp"    android:paddingLeft="10dp"    android:layout_marginStart="20dp"    android:layout_marginTop="380dp"    android:layout_centerHorizontal="true"    android:background="@drawable/rounded_bg"    android:layout_marginEnd="20dp"    android:hint="Kata Sandi"    android:singleLine="true"    android:textColorHint="@color/black" />  <Button    android:id="@+id/btnLogin"    android:layout_width="320dp"    android:layout_height="wrap_content"    android:layout_marginStart="20dp"    android:layout_marginTop="430dp"    android:backgroundTint="@color/purple_700"    android:textSize="15dp"    android:text="Sign In"    android:layout_centerHorizontal="true"    android:textColor="@color/white"    android:textAllCaps="true"    />  <Button    android:id="@+id/btnToRegist"    android:layout_width="@dimen/_250sdp"    android:layout_height="wrap_content"    android:layout_marginStart="20dp"    android:layout_marginTop="@dimen/_370sdp"    android:backgroundTint="#2448bd"    android:textSize="15dp"    android:text="Register"    android:layout_centerHorizontal="true"    android:textColor="@color/white"    android:textAllCaps="true"    /></RelativeLayout>