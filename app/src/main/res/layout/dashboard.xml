<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/primary"
  tools:context=".Dashboard">

  <LinearLayout
    android:id="@+id/uppers"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_110sdp"
    android:background="@color/white"
    android:gravity="center">
    <TextView
      android:id="@+id/Text1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:layout_margin="10dp"
      android:text="POSYANDU"
      android:textColor="@color/black"
      android:textSize="@dimen/_30sdp"
      android:textStyle="bold"/>
  </LinearLayout>

  <GridLayout
    android:id="@+id/mainGrid"
    android:layout_centerHorizontal="true"
    android:layout_width="365dp"
    android:layout_height="504dp"
    android:layout_below="@id/uppers"
    android:layout_marginStart="20dp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:columnCount="2"
    android:rowCount="3">

    <androidx.cardview.widget.CardView
      android:id="@+id/beranda"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_row="0"
      android:layout_rowWeight="1"
      android:layout_column="0"
      android:layout_columnWeight="1"
      android:layout_gravity="fill"
      android:onClick="Beranda"
      app:cardCornerRadius="8dp"
      app:cardElevation="8dp"
      app:cardUseCompatPadding="true"
      tools:ignore="OnClick">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="@dimen/_50sdp"
          android:layout_height="@dimen/_50sdp"
          android:src="@drawable/beranda" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Beranda"
          android:textAlignment="center"
          android:textStyle="bold" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/loker"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_row="0"
      android:layout_rowWeight="1"
      android:layout_column="1"
      android:layout_columnWeight="1"
      android:layout_gravity="fill"
      android:onClick="Loker"
      app:cardCornerRadius="8dp"
      app:cardElevation="8dp"
      app:cardUseCompatPadding="true"
      tools:ignore="OnClick">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="@dimen/_50sdp"
          android:layout_height="@dimen/_50sdp"
          android:src="@drawable/beranda" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Layanan"
          android:textAlignment="center"
          android:textStyle="bold" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/pendaftaran"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_row="1"
      android:layout_rowWeight="1"
      android:layout_column="0"
      android:layout_columnWeight="1"
      android:layout_gravity="fill"
      android:onClick="Pendaftaran"
      app:cardCornerRadius="8dp"
      app:cardElevation="8dp"
      app:cardUseCompatPadding="true"
      tools:ignore="OnClick">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="@dimen/_50sdp"
          android:layout_height="@dimen/_50sdp"
          android:src="@drawable/konsultasi" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Konsultasi"
          android:textAlignment="center"
          android:textStyle="bold" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/jadwal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_row="1"
      android:layout_rowWeight="1"
      android:layout_column="1"
      android:layout_columnWeight="1"
      android:layout_gravity="fill"
      android:onClick="Jadwal"
      app:cardCornerRadius="8dp"
      app:cardElevation="8dp"
      app:cardUseCompatPadding="true"
      tools:ignore="OnClick">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="@dimen/_50sdp"
          android:layout_height="@dimen/_50sdp"
          android:src="@drawable/jadwal" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Jadwal"
          android:textAlignment="center"
          android:textStyle="bold" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/kelulusan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_row="2"
      android:layout_rowWeight="1"
      android:layout_column="0"
      android:layout_columnWeight="1"
      android:layout_gravity="fill"
      android:onClick="Hasil"
      app:cardCornerRadius="8dp"
      app:cardElevation="8dp"
      app:cardUseCompatPadding="true"
      tools:ignore="OnClick">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="@dimen/_50sdp"
          android:layout_height="@dimen/_50sdp"
          android:src="@drawable/antrian" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Antrian"
          android:textAlignment="center"
          android:textStyle="bold" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/exit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_row="2"
      android:layout_rowWeight="1"
      android:layout_column="1"
      android:layout_columnWeight="1"
      android:layout_gravity="fill"
      android:onClick="Exit"
      app:cardCornerRadius="8dp"
      app:cardElevation="8dp"
      app:cardUseCompatPadding="true"
      tools:ignore="OnClick">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="@dimen/_50sdp"
          android:layout_height="@dimen/_50sdp"
          android:src="@drawable/rekap_bayi"
          />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Rekap Balita"
          android:textAlignment="center"
          android:textStyle="bold" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>
  </GridLayout>

  <TextView
    android:id="@id/text"
    android:layout_width="61dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="690dp"
    android:background="@drawable/rounded_bg"
    android:backgroundTint="#FFC107"
    android:onClick="Logout"
    android:text="Logout"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    tools:ignore="OnClick" />

</RelativeLayout>